// STEP 45 TEST: While Loops + Control Flow
// Tests: while loops, variable assignment, loop counters, accumulation

fn count_to_five {
    let i = 0
    while i < 5 {
        print(i)
        i = i + 1
    }
}

fn sum_to_ten {
    let sum = 0
    let i = 1
    while i <= 10 {
        sum = sum + i
        i = i + 1
    }
    print(sum)
}

fn countdown {
    let n = 5
    while n > 0 {
        print(n)
        n = n - 1
    }
    print(0)
}

fn nested_loops {
    let i = 0
    while i < 3 {
        let j = 0
        while j < 2 {
            print(i)
            print(j)
            j = j + 1
        }
        i = i + 1
    }
}

fn power_of_two {
    let result = 1
    let count = 0
    while count < 4 {
        result = result * 2
        count = count + 1
    }
    print(result)
}

fn main {
    print(1)
    count_to_five()
    print(2)
    sum_to_ten()
    print(3)
    countdown()
    print(4)
    nested_loops()
    print(5)
    power_of_two()
}
