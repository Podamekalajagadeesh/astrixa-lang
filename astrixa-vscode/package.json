{
  "name": "astrixa",
  "displayName": "ASTRIXA",
  "description": "First-class AI language - autocomplete, instant errors, go-to-definition",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "astrixa",
    "language",
    "ai",
    "web3",
    "async"
  ],
  "publisher": "ASTRIXA",
  "icon": "icon.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:astrixa",
    "workspaceContains:**.ax"
  ],
  "contributes": {
    "languages": [
      {
        "id": "astrixa",
        "aliases": [
          "ASTRIXA",
          "astrixa"
        ],
        "extensions": [
          ".ax"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "astrixa",
        "scopeName": "source.astrixa",
        "path": "./syntaxes/astrixa.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "astrixa.restartServer",
        "title": "Restart Language Server",
        "category": "ASTRIXA"
      },
      {
        "command": "astrixa.showOutput",
        "title": "Show Output",
        "category": "ASTRIXA"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ASTRIXA Language Configuration",
      "properties": {
        "astrixa.lsp.path": {
          "scope": "resource",
          "type": "string",
          "default": "astrixa-lsp",
          "description": "Path to the astrixa-lsp binary. Can be absolute or relative path."
        },
        "astrixa.lsp.debug": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Enable LSP debug logging. Shows detailed logs in Output panel."
        },
        "astrixa.diagnostics.enable": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable real-time diagnostics and error checking."
        },
        "astrixa.completion.enable": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable intelligent code completion."
        },
        "astrixa.hover.enable": {
          "scope": "resource",
          "type": "boolean",
          "default": true,
          "description": "Enable hover documentation."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.29.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
